@page 
@model Web.Pages.SalaryComponents.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div>
    <h3 class="text-center header m-4 " style="font-family: 'MS UI Gothic'">Details of <span class="text-primary text-capitalize">@Model.Employee.FirstName 's</span> Salary's</h3>
    <table class="table table-bordered" style="margin:auto; table-layout: fixed; width: 100%;">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total hours</th>
                <th>Bonus hours</th>
                <th>Bonus wages</th>
                <th>Expenses</th>
                <th style="width:28%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salary in Model.AllSalaryComponents)
            {
                <tr>
                    <td>
                        <input type="date" readonly asp-for="@salary.Date" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <input type="number" readonly asp-for="@salary.TotalHours" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <input type="number" readonly asp-for="@salary.BonusHours" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <input type="number" readonly asp-for="@salary.BonusWage" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <input type="number" readonly asp-for="@salary.Expenses" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" style="width: 48%;" asp-page="Edit" asp-route-id="@salary.Id">Edit</a>
                        <a class="btn btn-outline-danger" style="width: 48%;" asp-page="Delete" asp-route-id="@salary.Id" asp-route-employeeId="@salary.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn mt-3" style="background-color: black; width: 100px; color: white;" asp-action="Index">Back</a>
</div>

