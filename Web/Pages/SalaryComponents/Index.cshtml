@page
@model Web.Pages.SalaryComponents.IndexModel
@{
    ViewData["Title"] = "Salary components index";
}
<div>
    <h2 class="header text-center m-5" >Salary Components index</h2>
    <table class="table table-bordered" style="table-layout: fixed; width: 80%; margin: auto;">
        <thead>
            <tr>
                <th scope="col">Employee name</th>
                <th scope="col"></th>
                <th scope="col" />
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.FullName</td>
                        <td>
                            <a class="btn btn-outline-primary form-control" asp-page="./Details" asp-route-employeeId="@employee.Id">Details</a>
                        </td>
                        <td><a class="btn btn-outline-success form-control"  asp-page="./Add" asp-route-employeeId="@employee.Id">Add Salary</a></td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>
