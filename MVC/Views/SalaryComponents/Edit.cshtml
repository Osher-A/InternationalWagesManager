@model SalaryComponents
<div>
    <h3 class="text-center header m-4 " style="font-family: 'MS UI Gothic'">Updating Salary Details</h3>
    <form asp-action="Edit">
    <table class="table table-bordered" style="margin:auto; table-layout: fixed; width: 100%;">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total hours</th>
                <th>Bonus hours</th>
                <th>Bonus wages</th>
                <th>Expenses</th>
                <th style="width:28%"></th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        <input type="date" asp-for="@Model.Date" class="form-control" style="background-color: transparent" />
                    </td>
                    <td>
                        <input type="number"  asp-for="@Model.TotalHours" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.BonusHours" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.BonusWage" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Expenses" />
                    </td>
                    <td>
                        <button class="btn btn-outline-primary" style="width: 48%;" >Save</button>
                        <button class="btn btn-outline-danger" style="width: 48%;" asp-controller="SalaryComponents" asp-action="Index" >Cancel</button>
                    </td>
                </tr>
        </tbody>
    </table>
    </form>
    <a class="btn " style="background-color: black; width: 100px; color: white;" asp-action="Index">Back</a>
</div>
