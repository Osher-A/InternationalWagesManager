@model MVC.ViewModels.CreateWorkConditionsVM
@{
    ViewData["Title"] = "Add conditions";
}

<form asp-action="Add" style="width:100%; margin:auto;">
    <h2 class="text-center header mt-5">Add Work Conditions</h2>
    <div class="mt-5">
        <table class="table table-bordered border-2 border-secondary row-cols-xl-5" style="table-layout:fixed; width:100%;">
            <thead >
                <tr>
                    <th>Date</th>
                    <th>Pay Rate</th>
                    <th >Pay Currency</th>
                    <th>Wage Currency</th>
                    <th>Expenses Currency</th>
                    <th>Deductions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <td>
                    <input type="date" required asp-for="WorkConditions.Date" class="form-control"/>
                </td>
                <td>
                    <input type="number" required asp-for="WorkConditions.PayRate" class="form-control"/>
                </td>
                <td>
                    <select  asp-for="WorkConditions.PayCurrencyId" class="form-control" >
                         <option value="0" >Select Currency</option>
                        @{
                            foreach(var currency in Model.Currencies)
                            {
                                            <option value="@currency.Id" >@currency.Name</option>
                            }

                        }
                    </select>
                </td>
                 <td>
                    <select  asp-for="WorkConditions.WageCurrencyId" class="form-control" >
                       <option value="0">Select Currency</option>
                        @{
                            foreach(var currency in Model.Currencies)
                            {
                                            <option value="@currency.Id" >@currency.Name</option>
                            }

                        }
                    </select>
                </td>
                 <td>
                     <select asp-for="WorkConditions.ExpensesCurrencyId" class="form-control" >
                         <option value="0">Select Currency</option>
                        @{
                            foreach(var currency in Model.Currencies)
                            {
                                            <option value="@currency.Id" >@currency.Name</option>
                            }

                        }
                    </select>
                </td>
                 <td>
                    <input type="text" asp-for="WorkConditions.Deductions" class="form-control" />
                </td>
                <td hidden>
                    <input type="number" asp-for="WorkConditions.EmployeeId"  />
                </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="mb-5">
        <button type="submit" class="btn btn-danger">Submit</button>
        <a class="btn btn-primary mx-3" asp-action="Index">Cancel</a>
    </div>
    

    <div style="height:auto;"><span class="alert-danger text-center fw-bold" asp-validation-for="WorkConditions.Date" /></div>
    <div style="height:auto;"><span class="alert-danger text-center fw-bold" asp-validation-for="WorkConditions.PayRate" /></div>
    <div style="height:auto;"><span class="alert-danger text-center fw-bold" asp-validation-for="WorkConditions.WageCurrencyId" /></div>
    <div style="height:auto;"><span class="alert-danger text-center fw-bold" asp-validation-for="WorkConditions.PayCurrencyId" /></div>
    <div style="height:auto;"><span class="alert-danger text-center fw-bold" asp-validation-for="WorkConditions.ExpensesCurrencyId" /></div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
