@model InternationalWagesManager.DTO.Employee

@{
    ViewData["Title"] = "Update details";
}


<Form method="post" style="width: 50%; margin: auto;">
<h2 class="m-5 text-center header ">Update Details</h2>
<div >
    <table  class="table table-bordered border-2 border-secondary " >
  <tbody>
    <tr>
      <th scope="row">First name:</th>
      <td><input type="text" asp-for="FirstName" class="form-control" style="background-color: transparent"/></td>
    </tr>
    <tr>
      <th scope="row">Last name:</th>
      <td><input type="text" asp-for="LastName" class="form-control" style="background-color: transparent"/></td>
    </tr>
    <tr>
      <th scope="row">D.O.B</th>
      <td><input asp-for="DOB"  class="form-control" /></td>
    </tr>
    <tr>
      <th scope="row">Phone:</th>
      <td><input asp-for="Phone" class="form-control" style="background-color: transparent"/></td>
    </tr>
    <tr>
      <th scope="row">Email:</th>
      <td><input asp-for="Email" class="form-control" style="background-color: transparent"/></td>
    </tr>
    <tr>
        <td colspan="2" style="height: auto;">
            <span class="alert-danger text-center fw-bold" asp-validation-for="Email"/>
        </td>
    </tr>
    <tr>
        <td colspan="2">
           <button class="btn btn-outline-dark form-control"  type="submit" >Submit</button> </td>
    </tr>
  </tbody>
</table>
        <div class="mb-3">
            <a class="btn" style="background-color: black; color: white;" asp-action="Index">Cancel</a>
        </div>
</div>
 
</Form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

